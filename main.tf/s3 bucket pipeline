# s3 bucket integrate with jenkins pipeline
pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'git', url: 'https://github.com/sneha1006lakade/EasyCRUD-K8s.git'
                sh '''cd backend
                      rm -rf target
                      mvn clean install -DskipTests  '''
            }
        }
        stage('Upload to S3') {
            steps {
                withAWS(credentials: 'aws-credentials', region: 'us-east-1') {
                    sh 'aws s3 cp backend/target/ s3://buxxx123/ --recursive'
                }
            }
        }
